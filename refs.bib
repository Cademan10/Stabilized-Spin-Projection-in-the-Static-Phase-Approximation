@article{Alhassid1988,
  title = {Thermal {{Shape Fluctuations}}, {{Landau Theory}}, and {{Giant Dipole Resonances}} in {{Hot Rotating Nuclei}}},
  author = {Alhassid, Y. and Bush, B. and Levit, S.},
