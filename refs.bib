  pages = {162504},
  issn = {0031-9007, 1079-7114},
  doi = {10.1103/PhysRevLett.99.162504},
  urldate = {2025-01-17},
  abstract = {We introduce spin projection methods in the shell model Monte Carlo approach and apply them to calculate the spin distribution of level densities for iron-region nuclei using the complete \$(pf+g\_\textbraceleft 9/2\textbraceright )\$-shell. We compare the calculated distributions with the spin-cutoff model and extract an energy-dependent moment of inertia. For even-even nuclei and at low excitation energies, we observe a significant suppression of the moment of inertia and odd-even staggering in the spin dependence of level densities.},
